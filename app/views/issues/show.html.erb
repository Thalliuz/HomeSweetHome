<br><br><br><br>
<div class="row justify-content-md-center">
  <div class="col-sm-10">
    <div class="card text-center">
      <div class="card-header ">
      </div>
      <div class="card-body">
        <div class="row justify-content-md-center">
          <div class=" col-sm-12 col-md-12 col-lg-12">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title text-white bg-primary">Details</h4>
                <h6 class="card-subtitle mb-2 text-muted">Details given by the Tenant</h6>
                <h5 class="card-title"><%= @issue.detail %></h5>
                <br/>
              </div>
            </div>
          </div>
          <div class=" col-sm-12 col-md-12 col-lg-6">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title text-white bg-primary">Tenant Information</h4>
                <h6 class="card-subtitle mb-2 text-muted">Name</h6>
                <h5 class="card-title"><%= @issue.name %></h5>
                <br/>
                <h6 class="card-subtitle mb-2 text-muted">Address</h6>
                <h5 class="card-text"><%= @issue.address %></h5>
              </div>
            </div>
          </div>
          <div class=" col-sm-12 col-md-12 col-lg-6">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title text-white bg-primary">Status</h4>
                <h6 class="card-subtitle mb-2 text-muted">Current Status</h6>
                <% if @issue.status == "pending" %>
                  <span class="badge badge-pill badge-secondary"><%= @issue.status%></span>
                <% elsif @issue.status == "In Progress" %>
                  <span class="badge badge-pill badge-warning"><%= @issue.status%></span>
                <% else %>
                  <span class="badge badge-pill badge-success"><%= @issue.status%></span>
                <% end %>
                <br/><br/>
                <%if session[:type] == "owner" %>
                  <h6 class="card-subtitle mb-2 text-muted">Update status to</h6>
                  <div class="row justify-content-sm-center justify-content-md-center justify-content-lg-center">
                    <div class=" col-sm-1 col-md-3">
                      <%= form_for(@issue, url: "/issues/update")  do |f| %>
                        <%= f.hidden_field :id, value: @issue.id%>
                        <%= f.hidden_field :status, value: "In Progress"%>
                        <%= f.submit "In Progress" , class: "btn btn-warning" %>
                      <%end%>
                    </div>
                    <div class=" col-sm-1 col-md-3">
                      <%= form_for(@issue, url: "/issues/update")  do |f| %>
                        <%= f.hidden_field :id, value: @issue.id%>
                        <%= f.hidden_field :status, value: "Complete"%>
                        <%= f.submit "Complete" , class: "btn btn-success" %>
                      <%end%>
                    </div>
                  </div>
                <%end%>
              </div>
            </div>
          </div>
        </div>
    </div>
    <div class="card-footer text-muted">
      Issue created 2 days ago
      <%if session[:type] == "user" %>
        <%= form_for(@issue, method: :delete) do |f| %>
          <%= f.hidden_field :id, value: @issue.id%>
          <%= f.submit "Delete" , class: "btn btn-danger" %>
        <%end%>
      <%end%>
    </div>
  </div>
  </div>
</div>
